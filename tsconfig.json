{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es2017",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "components": ["src/components"],
            "containers": ["src/containers"],
            "constants": ["src/constants"],
            "types": ["src/types"],
            "reducers/*": ["src/reducers/*"],
            "reducers": ["src/reducers"],
            "helpers": ["src/helpers"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}